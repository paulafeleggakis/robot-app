<p id="notice"><%= notice %></p>

<h1>Robots</h1>

<table>
  <thead>
    <tr>
      <th>X coordinate</th>
      <th>Y coordinate</th>
      <th>Orientation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @robots.each do |robot| %>
      <tr>
        <td><%= robot.x_coordinate %></td>
        <td><%= robot.y_coordinate %></td>
        <td><%= robot.orientation %></td>
        <td><%= link_to 'Show', robot %></td>
        <td><%= link_to 'Edit', edit_robot_path(robot) %></td>
        <td><%= link_to 'Destroy', robot, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Robot', new_robot_path %>
